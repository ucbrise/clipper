# This ARG isn't used but prevents warnings in the build script
ARG CODE_VERSION
FROM continuumio/anaconda:5.1.0

MAINTAINER Dan Crankshaw <dscrankshaw@gmail.com>


RUN mkdir -p /model \
      && apt-get update \
      && apt-get install -y libzmq5 libzmq5-dev redis-server\
      build-essential protobuf-compiler libprotoc-dev \
      && conda config --set ssl_verify no \
      && conda install -c anaconda cloudpickle=0.5.2
RUN conda install -y pyzmq libsodium
RUN pip install prometheus_client pyyaml jsonschema redis psutil flask

COPY clipper_admin /clipper_src/

RUN cd /clipper_src \
    && pip install .

WORKDIR /container

COPY containers/python/__init__.py containers/python/rpc.py /container/

COPY monitoring/metrics_config.yaml /container/

ENV CLIPPER_MODEL_PATH=/model

# vim: set filetype=dockerfile:
